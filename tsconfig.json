{
    "compilerOptions": {
        "strict": true,

        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "allowJs": true,
        "outDir": "dist",
        "checkJs": false,
        "moduleResolution": "node",

        "baseUrl": "src",
        "paths": {
            "~/*": ["./*"],
        },
        "typeRoots": ["node_modules/@types", "src/types"],
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
    },

    "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js", "./**/*.jsx"],
    "exclude": ["./config/**/*.js", "./build/*", "./webpack.config.js"]
}
